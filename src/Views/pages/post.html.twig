{% extends 'layout/layout.html.twig' %}
{% set pageTitle = post.title %}
{% block header %}
    {% include 'components/header.html.twig' with {
        'title': post.title,
        'description': post.description,
        'imageUrl': post.imageAbsoluteUrl,
    } %}
{% endblock %}

{% block content %}
    {% include 'components/breadcrumbs.html.twig' with {
        'data': {
            'Home': '/',
            'Post': '/post/' ~ post.slug,
        }
    } %}
    {{ post.html|raw }}
{% endblock %}
