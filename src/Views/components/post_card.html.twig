{% set link = "/post/" ~ post.slug %}
{% set featured = featured ?? false %}
<div class="card mb-4">
    <a href="{{ link }}"><img class="card-img-top" src="{{ post.imageAbsoluteUrl }}" alt="Cover image"/></a>
    <div class="card-body">
        <div class="small text-muted">{{ post.createdAt|date() }}</div>
        <h2 class="card-title {% if featured == false %}h4{% endif %}">{{ post.title }}</h2>
        <p class="card-text">{{ post.description }}</p>
        <a class="btn btn-primary" href="{{ link }}">Read more</a>
    </div>
</div>
